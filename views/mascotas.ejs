<%- include("templates/cabecera",{tituloWeb:"Pagina de Inicio"}) %>

    <div class="container">
        <h1>CRUD mongo</h1>
        
        <a class="btn btn-success btn-block my-4"
        href="/mascotas/crear"
        >
            Crear nueva tabla
        </a>

        <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">nombre</th>
                <th scope="col">descripcion</th>
                <th scope="col">Acciones</th>
            </tr>
            </thead>
            <tbody>
                <% if (arrayMascotas.length > 0) { %>
                    <% arrayMascotas.forEach(mascota => 
                    { %>
                        <tr>
                            <th scope="row"><%= mascota.id %> </th>
                            <td><%= mascota.nombre %>  </td>
                            <td><%= mascota.descripcion %>  </td>
                            <td>
                                <a href="mascotas/<%= mascota.id %>"
                                    class="btn btn-warning btn-sm"
                                >
                                Editar
                                </a>
                            </td>
                        </tr>
                    <% }) 
                    %>
                <% } %>
                
            </tbody>
        </table>
   
    </div>

<%- include('templates/footer'); %>
</html>